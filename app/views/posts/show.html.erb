<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<hr>
<%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-info' %>
<%= link_to "Delete", post_path(@post), method: :delete, data:
{ confirm: "Do you really want to delete article?" }, :class => 'btn btn-info' %>
<hr>
<h2>Comments</h2>
<% @post.comments.each do |com| %>
<div class="alert alert-info">
  <p><strong><%= com.username %></strong>: <%= com.body %></p>
</div>
<% end %>
<hr>
<h2>Add comment</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    User<br>
    <%= f.text_field(:username, {:class => 'form-control'}) %>
  </p>
  <p>
    Comment<br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>

  <p>
    <%= f.submit("Add Comment", {:class => 'btn btn-info'}) %>
  </p>
<% end %>
